<% layout('layout') %>


<div class="container">
  <h2>Add poll form</h2>
  <form class="form-horizontal" method="post" action="/addnew">
    <div class="form-group">
      <label class="control-label col-sm-2" for="title">Title:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="chooses">Chooses:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control" id="chooses" placeholder="Enter Chooses. example: test1,test2,test3" name="chooses">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>